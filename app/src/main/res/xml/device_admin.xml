<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- Allow the app to lock the device -->
        <force-lock />
        
        <!-- Allow the app to wipe device data -->
        <wipe-data />
        
        <!-- Allow the app to reset password -->
        <reset-password />
        
        <!-- Allow the app to set password quality -->
        <limit-password />
        
        <!-- Allow the app to watch login attempts -->
        <watch-login />
        
        <!-- Allow the app to disable camera -->
        <disable-camera />
        
        <!-- Allow the app to disable keyguard features -->
        <disable-keyguard-features />
    </uses-policies>
</device-admin>
